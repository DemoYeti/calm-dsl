
{% macro VcenterNicInfo() -%}

title: VCenter NICs
type: object
properties:
  nic_type:
    type: string
  net_name:
    type: string

{%- endmacro %}


{% macro VcenterTemplateNicInfo() -%}

title: VCenter Template NIC
type: object
properties:
  nic_type:
    type: string
  net_name:
    type: string
  is_deleted:
    type: boolean
    default: False
  key:
    type: integer
    default: -1

{%- endmacro %}


{% macro VcenterVdiskInfo() -%}

title: VCenter Disk
type: object
properties:
