    type: string
    default: SCSI
  disk_size_mb:
    type: integer
    default: -1
  disk_mode:
    type: string
    default: "persistent"
  location:
    type: string
    default: ""
  controller_key:
    type: integer
  device_slot:
    type: integer
  iso_path:
    type: string
    default: ""

